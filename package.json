        "endOfLine": "crlf"
    },
    "name": "@kizahasi/option",
    "author": "kizahasi",
    "module": "dist/option.esm.js",
    "size-limit": [{
            "path": "dist/option.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/option.esm.js",
            "limit": "10 KB"
        }
    ],
    "resolutions": {
        "**/@typescript-eslint/eslint-plugin": "^4.11.1",
        "**/@typescript-eslint/parser": "^4.11.1",
        "**/jest": "^26.6.3",
        "**/ts-jest": "^26.4.4",
        "**/typescript": "^4.2.4"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^5.0.1",
        "husky": "^7.0.0",
        "size-limit": "^5.0.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.0",
        "typescript": "^4.3.5"
    }
}